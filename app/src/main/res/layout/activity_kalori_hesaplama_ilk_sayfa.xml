<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bsc.gri.dietappx.KaloriHesaplamaIlkSayfa"
    android:layout_margin="16dp"

    >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hedefiniz nedir?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
         />

     <RadioGroup
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView5"
         android:layout_marginTop="16dp"
         android:id="@+id/radioGroup">
         <RadioButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Kilo vermek"
             android:id="@+id/kiloVerRadioButton"
             />
         <RadioButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Kilomu korumak"
             android:id="@+id/kiloKoruRadioButton"
             />

     </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Devam et"
        android:id="@+id/devamEtButton"
        />


</RelativeLayout>
